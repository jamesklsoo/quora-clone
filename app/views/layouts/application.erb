<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/css/application.css">

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
		<script src="/js/application.js"></script>
		<title>Quoree</title>

	</head>

	<body>
		<% if logged_in? %>
		<nav class="navbar navbar-fixed-top">
		  <div class="container-fluid">
		    <div class="navbar-header">

		      <!-- Logo -->
		      <a href="/" style="width: 100%; height: 100%; z-index: 999;">
		        <div class="logo"></div>
		      </a>		    


		      <!-- Ask a question -->
		      <div class="container form-container">
		        <table>
		          <tr>

		            <form action="/questions" method="post">
		              <td><input class="input-bar" type="text" placeholder="Ask your question" name="question" required></td>
		              <td><button class="btn btn-default question-submit" type="submit" value="Ask Quoree">Ask Quoree</button></td>
		            </form>
		          </tr>
		        </table>
		      </div>

		      <!-- User button -->
		      <button type="button" class="btn btn-default dropdown-toggle nbar-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%=current_user.first_name%></button>
		        <ul class="dropdown-menu pull-right">
		          <li>
								<form class="dropdown-wide" action="/user/<%=current_user.id%>" method="get">
									<button style="text-align: center;" type="submit" class="btn btn-default dropdown-wide">Profile</button>
								</form>
							</li>
		          <li role="separator" class="divider"></li>
		          <li>
		            <form class="dropdown-wide" action="/logout" method="post">
		              <button style="text-align: center;" id="logout" type="submit" class="btn btn-default dropdown-wide" value="Log Out">Log Out</button>
		            </form>
		          </li>
		        </ul>

		    </div>
		  </div>

		</nav>
		<% end %>
			<div class="blur-page"></div>

		<% if flash[:notice] %>
			<div class="notice"><%= flash[:notice] %></div>
		<% end %>

    <% if flash[:error] %>
      <div class="error"><%= flash[:error] %></div>
    <% end %>
		<div class="body-container">
		<%= yield %>
		</div>
	</body>

</html>